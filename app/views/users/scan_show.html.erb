<div ng-app="scan">
  <div class="profile-page" ng-controller="scanProfileController">
    <header class="header">
      <div class="row">
        <div class="col-sm-3">
          <div class="avatar">
            <img ng-src="{{profilePicture}}" alt="" class="img-circle">
          </div>
          <!--<div class="update-progress">-->
            <!--<label for="">Profile update status:</label>-->
            <!--<div class="progress">-->

            <!--</div>-->
          <!--</div>-->
        </div>
        <div class="col-sm-9">
          <div class="author-info">
            <ul class="statistics">
              <li class="statistic">
                <span class="statistic-label">Username:</span>
                <span class="statistic-value">
                  <a href="https://instagram.com/{{username}}" target="_blank" rel="nofollow me">{{username}}</a>
                </span>
              </li>
              <li class="statistic">
                <span class="statistic-label">Full name:</span>
                <span class="statistic-value">{{fullName}}</span>
              </li>
              <li class="statistic" ng-show="website">
                <span class="statistic-label">Website:</span>
              <span class="statistic-value">
                <a href="{{website}}" class="website-link" rel="nofollow me" target="_blank">{{website_wo_schema()}}</a>
              </span>
              </li>
              <li class="statistic" ng-show="location">
                <span class="statistic-label">Location:</span>
                <span class="statistic-value location-statistic">{{location}}</span>
              </li>
              <li class="statistic" ng-show="avg.likes">
                <span class="statistic-label">AVG Likes:</span>
                <span class="statistic-value avg-likes-statistic">{{avg.likes}}</span>
              </li>
              <li class="statistic" ng-show="avg.comments">
                <span class="statistic-label">AVG Comments:</span>
                <span class="statistic-value avg-comments-statistic">{{avg.comments}}</span>
              </li>
            </ul>

            <div class="followers-info">
              <div class="row text-center">
                <div class="col-sm-2">
                  {{followed_by}}<br/>
                  <span class="desc">
                    Total followers
                    <div ng-show="{{followersUpdatedAt}}">Last updated: {{followersUpdatedAt}}</div>
                    <div><a href="/users/{{username}}/followers.csv">Download</a></div>
                  </span>
                </div>
                <div class="col-sm-3" ng-show="popularFollowersPercentage">
                  {{popularFollowersPercentage}}%<br/>
                  <span class="desc">Percent of followers with user base that have more than 250 followers</span>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </header>

    <div id="followers-bars" ng-show="followersAnalytics"></div>
  </div>

  <br/>
  <br/>

  <%= form_tag users_scan_show_path(username: ''), method: :get, class: 'scan-form' do %>
    <h3 class="text-center">New search</h3>
    <div class="row">
      <div class="col-sm-4 col-sm-offset-4 text-center">
        <input type="text" class="form-control" id="username" placeholder="Enter Username" name="username">
        <button type="submit" class="btn btn-default">Submit</button>
      </div>
    </div>
  <% end %>
</div>