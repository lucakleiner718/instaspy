<div style="overflow: auto">
  <table class="table">
    <thead>
    <tr>
      <th>Username</th>
      <th>Full Name</th>
      <th>Bio</th>
      <th>Website</th>
      <th>Follows</th>
      <th>Followers</th>
      <th>Email</th>
    </tr>
    </thead>
    <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.username %></td>
        <td><%= user.full_name %></td>
        <td><%= user.bio %></td>
        <td><%= user.website %></td>
        <td><%= user.follows || 'N/A' %> (<%= user.followees.size %>)</td>
        <td><%= user.followed_by || 'N/A' %> (<%= user.followers.size %>)</td>
        <td><%= user.email %></td>
      </tr>
    <% end %>
    </tbody>
  </table>

  <%= paginate @users %>
</div>