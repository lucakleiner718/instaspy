<div class="row">
  <div class="col-sm-6 col-sm-offset-3">
    <h1>New report</h1>
    <%= simple_form_for @report do |f| %>
      <%= f.input :input, as: :text, hint: 'Each Username or Instagram ID on new line' %>
      <%= f.input :format, as: :select, label: 'Report goal', collection: [['Followers', 'followers']] %>
      <%= f.input :notify_email, hint: 'Enter your email if you want to be notified after report finished', input_html: { value: session['report_notify_email'] } %>
      <%= f.input :output_data, as: :check_boxes, collection: [['AVG Likes', 'likes'], ['Location', 'location'], ['Feedly subscribers amount', 'feedly']] %>
      <div class="pull-right"><%= f.button :submit %></div>
    <% end %>
  </div>
</div>