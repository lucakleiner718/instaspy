<div class="row">
  <div class="col-sm-6 col-sm-offset-3">
    <h1>New report</h1>
    <%= simple_form_for @report do |f| %>
      <%= f.input :format, as: :select, label: 'Report goal', collection: [['Followers', 'followers'], ['Followees', 'followees'], ['Users', 'users'], ['Tags', 'tags'], ['Recent Media', 'recent-media']], prompt: 'Please select', selected: params[:format] %>
      <%= f.input :input, as: :text, hint: 'Each Username or Instagram ID or Tag should be on new line', input_html: { value: params[:input] } %>
      <%= f.input :notify_email, hint: 'Enter your email if you want to be notified after report finished', input_html: { value: session['report_notify_email'] } %>
      <%= f.input :note, as: :text %>
      <%= f.input :output_data, as: :check_boxes, collection: [['AVG Likes', 'likes'], ['Location', 'location'], ['Feedly subscribers amount', 'feedly'], ['Last media date', 'last_media_date'], ['Slim (1k+ followers, with email)', 'slim'], ['Slim (1k+ followers)', 'slim_followers']] %>
      <%= f.input :date_from, input_html: { class: 'report_date_range' } %>
      <%= f.input :date_to, input_html: { class: 'report_date_range' } %>
      <div class="pull-right"><%= f.button :submit %></div>
    <% end %>
  </div>
</div>
<br/>