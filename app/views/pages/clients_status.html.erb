<h3>Instagram Accounts</h3>
<table style="width: 450px;">
  <thead>
  <tr>
    <th>Client ID</th>
    <th>Calls Remaining</th>
  </tr>
  </thead>
  <tbody>
  <% InstagramAccount.all.each do |account| %>
    <%
       resp = nil
       issue = false
       if account.access_token.present?
         begin
           client = InstaClient.new(account).client
           resp = client.utils_raw_response
         rescue => e
           issue = true
         end
       end
    %>
    <tr>
      <td><%= account.client_id %></td>
      <td style="text-align: center;">
        <% if resp.present? %>
          <%= resp.headers[:x_ratelimit_remaining]%> / <%= resp.headers[:x_ratelimit_limit] %>
        <% elsif issue %>
          0 / 5000
        <% else %>
          <%= link_to('Login to Instagram', oauth_connect_path(key: account.client_id)) %>
        <% end %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>